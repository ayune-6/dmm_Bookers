<h1>Editing Book</h1>

<%= form_with model:@book, local: true do |f| %>

    <% if @book.errors.any? %>
          <div id="error_explanation">
            <p><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</p>
            <ul>
                <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
          </div>
    <% end %>

    <p>Title</p>
    <%= f.text_field :title %>
    <% if @book.errors.include?(:title) %>
        <p style="color: red;"><%= @book.errors.full_messages_for(:title).first %>
    <% end %>

    <p>Body</p>
    <%= f.text_area :body %>
    <% if @book.errors.include?(:title) %>
        <p style="color: red;"><%= @book.errors.full_messages_for(:body).first %>
    <% end %>

    <%= f.submit 'Update Book' %>
<% end %>
