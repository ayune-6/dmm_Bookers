<h1 class="books">Books</h1>

<!--<section class="books">-->
  <table>
    <tr>
      <th width="20%">Title</th>
      <th width="40%">Body</th>
      <th></th>
    </tr>
    <tbody>
    <% @books.each do |book| %>
    <tr>
      <td class="title"><%= book.title %></td>
      <td class="body"><%= book.body %></td>
      <td class="links">
        <%= link_to "Show", book_path(book.id), {class: "show-link"} %>
        <%= link_to "Edit", edit_book_path(book.id), {class: "edit-link"} %>
        <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
      </td>
    </tr>
    <% end %>
    </tbody>
  </table>
<!--</section>-->
  <h2>New book</h2>

  <% flash.each do |message_type, message| %>
    <%= message %>
  <% end %>

  <%= form_with model:@book, local:true do |f| %>
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <p><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</p>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <p>Title</p>
    <%= f.text_field :title %>
    <% if @book.errors.include?(:title) %>
      <p style="color: red;"><%= @book.errors.full_messages_for(:title).first %>
    <% end %>

    <p>Body</p>
    <%= f.text_area :body %>
    <% if @book.errors.include?(:body) %>
      <p style="color: red;"><%= @book.errors.full_messages_for(:body).first %>
    <% end %>


    <%= f.submit 'Create Book' %>

  <% end %>