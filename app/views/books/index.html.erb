<h1>Books</h1>
<table style="width:100%">
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %>
    <%= link_to "Show", book_path(book.id) %>
    <%= link_to "Edit", edit_book_path(book.id) %>
    <%= link_to "Destroy", book_path(book.id), method: :delete %>
    </td>
  </tr>
  <% end %>
  <%= form_with model:@book, url:'/books', local:true do |f| %>
    <%= f.text_field :Title %>
    <%= f.text_field :Body %>
    <%= f.submit %>
  <% end %>


